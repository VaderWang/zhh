.menu{
  display: flex;
  flex-direction: column;
}
.menubar {
  display: flex;
  line-height: 40px;
  background: #ffffff;
  justify-content: space-around;
  position: fixed;
  width: 100%;
}
.active {
  color: rgb(32, 160, 255);
}
.menu-box{
  margin: 40px 0;
  display: flex;
  flex-wrap: wrap;
  padding: 10px;
}
.menu-item{
  display: flex;
  flex-direction: column;
  padding: 0 25px 10px;
}
.menu-img{
  width: 100px;
  height: 100px;
}
.menu-img image {
  width: 100%;
  height: 100%;
}
.menu-name{
  font-size: 14px;
  font-weight: 700;
}
.menu-foot{
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}
.menu-price{
  color: red;
}
.menu-icon{
  display: inline-block;
  width: 20px;
  line-height: 20px;
  color: #fff;
  background: rgb(32, 160, 255);
  border-radius: 50%;
  text-align: center;  
}
.menu-num{
  padding: 0 4px;
}

.finish{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgb(32, 160, 255);
  line-height: 40px;
  color: #ffffff;
  text-align: center;
  font-size: 14px;
}

