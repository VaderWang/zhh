.food-container{
  display: flex;
  flex-direction: column;
  padding: 0 14px;
}
.food-box{
  display: flex;
  flex-direction: column;
}
.food-item{
  display: flex;
  justify-content: center;
}
.totalprice {
  text-align: center;
  padding: 16px 0;
}
.user-info{
  display: flex;
  flex-direction: column;
  font-size: 14px;
}
.info-item{
  display: flex;
}
.info-text{
  width: 90px;
}

.buy-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgb(32, 160, 255);
  line-height: 40px;
  color: #ffffff;
  text-align: center;
  font-size: 14px;
}